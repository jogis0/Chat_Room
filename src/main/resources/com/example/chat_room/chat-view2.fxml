<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chat_room.ChatController2">
   <children>
      <Button fx:id="saveButton" layoutX="25.0" layoutY="14.0" mnemonicParsing="false" text="Save chat" />
      <Button fx:id="backButton" layoutX="434.0" layoutY="14.0" mnemonicParsing="false" text="Back" />
      <ScrollPane fx:id="spMain" layoutX="25.0" layoutY="50.0" prefHeight="300.0" prefWidth="450.0">
         <content>
            <VBox fx:id="messageVBox" prefHeight="290.0" prefWidth="440.0" />
         </content></ScrollPane>
      <TextField fx:id="tfMessage" layoutX="24.0" layoutY="361.0" prefHeight="25.0" prefWidth="401.0" promptText="Enter message" />
      <Button fx:id="sendButton" defaultButton="true" layoutX="432.0" layoutY="361.0" mnemonicParsing="false" text="Send" />
      <Label fx:id="nameLabel" layoutX="200.0" layoutY="18.0" text="/* USER'S NAME */" />
   </children>
</AnchorPane>
